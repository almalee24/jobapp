<% if @position.errors.any? %>
    <h5 class="error"><%= @positions.errors.full_messages.to_sentence %></h5>
<% end %>


    <%= form_with model: @position, local: true do |f| %>
        <%= f.label :title, "Job Title" %><br>
        <%= f.text_field :title %><br><br>

        <%= f.select :jobtype, ["Full-Time", "Part-Time", "Contract"] %> /
        <%= f.text_field :location, placeholder: 'Location'%><br><br>

        <%= f.fields_for :companies do |i| %>
            <%= f.label :name, "Company Name" %><br>
            <%= f.text_field :name %><br><br>

            <%= f.label :website, "Company Website"%><br>
            <%= f.text_field :website %><br><br>

            <%= f.label :location, "Company Location"%><br>
            <%= f.text_field :location %><br><br>
        <% end %>

        <%= f.label :description, "Job Description"%><br>
        <%= f.text_area :description %><br><br>
        
        <%= f.submit "Submit Job", :class => "jobpost-btn"%>
    <% end  %>

