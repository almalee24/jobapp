<% if @position.errors.any? %>
    <h5 class="error"><%= @positions.errors.full_messages.to_sentence %></h5>
<% end %>

<%= form_with model: @position, local: true do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br><br>

    <%= f.label :company %>
    <%= f.text_field :company %><br><br>

    <%= f.label :location %>
    <%= f.text_field :location %><br><br>

    <%= f.label :url %>
    <%= f.text_field :url %><br><br>

    <%= f.label :jobtype %>
    <%= f.text_field :jobtype %><br><br>

    <%= f.submit %>
<% end  %>
