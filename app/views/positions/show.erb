<div class="show-position">
    <div class="show-position-description">
        <div>
            <h5><%= @position.jobtype %>/<%= @position.company.location %><h5>
            <% if @position.user_id == current_user.id %>
                <%= link_to "Edit Position", edit_position_path(@position)%>
                <%= link_to("Delete Position", @position, method: :delete, data:{confirm: "Do you really want to delete?"}) %>
            <% end %>  
            <h1><%= @position.title %></h1> 
            <div class="dropdown">
                <ion-icon name="heart-outline"></ion-icon>
                <div class="dropdown-content">
                    <% if current_user %>
                        <%= link_to "Favorite", favorite_position_path(@position, type: "favorite"), method: :put %>
                        <%= link_to "Unfavorite", favorite_position_path(@position, type: "unfavorite"), method: :put %>
                    <% end %>
                </div>
            </div>
        </div>
        <%= Nokogiri::HTML(@position.description).xpath("//text()").text.gsub("Description", "") %>
    </div>
</div>