<div class="show-position">
    <div class="show-position-description">
        <div>
            <h5><%= @position.jobtype %>/<%= @position.location %><h5>
            <h1><%= @position.title %></h1> 
            <div class="dropdown">
                <ion-icon name="heart-outline"></ion-icon>
                <div class="dropdown-content">
                    <% if current_user %>
                        <li><%= link_to "Favorite", favorite_position_path(@position, type: "favorite"), method: :put %></li>
                        <li><%= link_to "Unfavorite", favorite_position_path(@position, type: "unfavorite"), method: :put %></li>
                    <% end %>
                </div>
            </div>
        </div>
        <%= Nokogiri::HTML(@position.description).xpath("//text()").text.gsub("Description", "") %>
    </div>
</div>